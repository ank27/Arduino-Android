<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinate_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_head"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="6dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    android:id="@+id/main"
    tools:context=".Main">
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/top_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.example.ankurkhandelwal.aurduinoproject.Utils.MyTextView
                        android:id="@+id/city_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="2dp"
                        android:textSize="20dp"
                        android:textColor="@color/windowBackground"
                        android:text="Mumbai"/>
                    <com.example.ankurkhandelwal.aurduinoproject.Utils.MyTextView
                        android:id="@+id/time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/city_text"
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textColor="@color/windowBackground"
                        android:text="06:30 PM"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/temp_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/top_view">
                    <LinearLayout
                        android:id="@+id/temp_text"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/cloud_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_sun"/>
                        <com.example.ankurkhandelwal.aurduinoproject.Utils.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperature"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:textColor="@color/windowBackground"
                            android:padding="10dp"/>
                    </LinearLayout>
                        <LinearLayout
                            android:id="@+id/temp_value_layout"
                            android:layout_below="@+id/temp_text"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <com.example.ankurkhandelwal.aurduinoproject.Utils.MyTextView
                                android:id="@+id/temp_value_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/windowBackground"
                                android:layout_marginLeft="5dp"
                                android:textSize="80dp"
                                android:text="27"/>
                            <com.example.ankurkhandelwal.aurduinoproject.Utils.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/windowBackground"
                                android:layout_marginTop="10dp"
                                android:textSize="50dp"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="\u2103"/>
                        </LinearLayout>
                    </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/light_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/temp_layout">
                    <LinearLayout
                        android:id="@+id/light_text"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/light_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_thermometer"/>
                        <com.example.ankurkhandelwal.aurduinoproject.Utils.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Light Intensity"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:textColor="@color/windowBackground"
                            android:padding="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/light_value_layout"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/light_text"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <com.example.ankurkhandelwal.aurduinoproject.Utils.MyTextView
                            android:id="@+id/light_intensity_text"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/windowBackground"
                            android:textSize="80dp"
                            android:text="270"/>
                        <com.example.ankurkhandelwal.aurduinoproject.Utils.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/windowBackground"
                            android:textSize="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textStyle="normal"
                            android:text="lux"/>

                    </LinearLayout>
                </RelativeLayout>

            <LinearLayout
                    android:id="@+id/fab_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    android:layout_marginBottom="40dp">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_plesk"
                        android:elevation="8dp"
                        app:rippleColor="@color/dividerColor"
                        android:background="@drawable/ripple_oval"
                        app:fabSize="normal"
                        app:borderWidth="0dp"/>
                    <!--<ImageButton-->
                        <!--android:id="@+id/fab_button"-->
                        <!--android:layout_centerInParent="true"-->
                        <!--android:layout_width="56dp"-->
                        <!--android:layout_height="56dp"-->
                        <!--android:layout_marginLeft="15dp"-->
                        <!--android:elevation="8dp"-->
                        <!--android:src="@drawable/ic_plesk"-->
                        <!--android:background="@drawable/ripple_oval" />-->
                    <com.example.ankurkhandelwal.aurduinoproject.Utils.MyTextView
                        android:id="@+id/appliance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/windowBackground"
                        android:textSize="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Appliances" />
                </LinearLayout>
            </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    <RelativeLayout
        android:id="@+id/appliance_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowBackground"
        android:visibility="invisible">
        <RelativeLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_appliance"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/windowBackground"
                app:layout_scrollFlags="scroll|enterAlways"
                android:elevation="5dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
        </RelativeLayout>
        <RelativeLayout
            android:background="#fff"
            android:gravity="center"
            android:id="@+id/no_appliances"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.ankurkhandelwal.aurduinoproject.Utils.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No Appliances...Try Later"
                android:textSize="20dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/list_layout"
            android:layout_below="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/list_appliances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="2dp"></ListView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
